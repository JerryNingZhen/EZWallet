<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/title_project" />

    <RelativeLayout
        android:id="@+id/ll_wallet_address"
        android:layout_marginTop="@dimen/dimens_20"
        android:layout_width="match_parent"
        android:minHeight="@dimen/dimens_40"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:text="钱包地址"
            android:id="@+id/tv_add_title"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimens_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_add_title"
            android:layout_marginLeft="@dimen/dimens_20"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimens_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_wallet_name"
        android:layout_marginTop="@dimen/dimens_20"
        android:layout_width="match_parent"
        android:minHeight="@dimen/dimens_40"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:text="钱包地址"
            android:id="@+id/tv_name_title"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimens_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_centerVertical="true"
            android:text="11111"
            android:layout_marginLeft="@dimen/dimens_20"
            android:drawableRight=""
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimens_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>